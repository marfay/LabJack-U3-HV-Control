        ScreenManager: # Behaves like relative Layout - that means all childrens pos[0,0], but SM has pos normal according to window position
            id: sm_second
            Screen:
                name: 'input'
                BoxLayout:
                    orientation: 'vertical'
                    BoxLayout:
                        id: graph_window
                    BoxLayout:
                        size_hint_y: 0.17

                        BoxLayout:
                            spacing: 1
                            padding: 3
                            orientation: 'vertical'
                            Button:
                                text: 'Visualize'
                                on_press: root.start_real_time()
                            BoxLayout:
                                Button:
                                    text: 'Create'
                                    on_press: root.create_graph()
                                Button:
                                    text: 'Delete'
                                    on_press: root.delete_graph()
                        BoxLayout:
                            size_hint_x: 0.3
                            Label:
                                id: FPS_g
                                text: 'FPS: '


            Screen:
                name: 'connection'
                BoxLayout:
                    orientation: 'vertical'
                    BoxLayout:
                        size_hint_y: 0.1
                        Label:
                            text:'IP.adress/port: '
                        TextInput:
                            text: '10.0.0.33'
                            id: t_ip
                        TextInput:
                            text: '10011'
                            id: t_port
                        Button:
                            id: con
                            text: 'Connect'
                            on_press: root.con()
                            on_release: con.disabled=True
                    Button:
                        text: 'Disconnect'
                        size_hint_y: 0.1
                        on_press: root.disconnect()
                    Button:
                        size_hint_y: 0.1
                        text: 'Find my ip'
                        on_press: root.find_my_ip()

