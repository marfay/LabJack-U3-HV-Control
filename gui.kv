MainWindow:
    #on_size: root.draw_vector(root.touch)
    orientation: 'vertical'
    Label:
        markup: True
        text: '[size=32px][color=#0398ff]Controller[/color][sub]for[/sub] [i][b]LabJack[/b][/i][/size]'
        size_hint_y: 0.1

    BoxLayout:
        size_hint_y: 0.1
        Button:
            text: 'Control'
            on_release: sm_real_time.current = 'output'
        Button:
            text: 'Inputs'
            on_release: sm_real_time.current = 'set_direction'
        Button:
            text:'Network'
            on_release: sm_second.current = 'connection'
        Button:
            text: 'Visualisation'
            on_release: sm_second.current = 'input'
        #Button:
        #    text: 'Functions'
        #    on_release: sm_real_time.current = 'functions'

    ProgressBar:
        size_hint_y: 0.01
        id: pbdata
        max: 100
        value: 0





    BoxLayout: ### MUSI BYT - kvuli screen manageru

        ScreenManager: # Behaves like relative Layout - that means all childrens pos[0,0], but SM has pos normal according to window position
            id: sm_real_time
            Screen:
                name: 'output'

                BoxLayout:
                    orientation: 'vertical'
                    BoxLayout:
                        size_hint_y: 0.1
                        BoxLayout:

                            orientation: 'vertical'
                            Label:
                                text:'Voltage'
                            Label:
                                id: amplit
                            ProgressBar:
                                id: pb
                                value: 0
                                max:70
                                size_hint_y: 0.1
